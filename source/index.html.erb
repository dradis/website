      <h3>As seen on</h3>

      <p>
        <%= image_tag 'press/dc-logo.png',         class: 'logo2', width: 250 %>
        <%= image_tag 'press/blackhat.png',        class: 'logo2', width: 250 %>
        <%= image_tag 'press/bsides_logo.png',     class: 'logo2', width: 250 %>
      </p>
      <br/>
      <p>
        <%= image_tag 'press/pentesterlab.png',    class: 'logo2', width: 200 %>
        <%= image_tag 'press/security_weekly.png', class: 'logo2' %>
        <%= image_tag 'press/rooted_logo.png',     class: 'logo2', width: 200 %>
      </p>
    </div>
  </section>
</div>

